# AI Service Environment Variables

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/ai-service

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Claude API
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Gemini API (set either GEMINI_API_KEY or GOOGLE_API_KEY)
GEMINI_API_KEY=your_gemini_api_key_here
GOOGLE_API_KEY=

# Service Configuration
PORT=3004
NODE_ENV=development

# Quiz Service URL
QUIZ_SERVICE_URL=http://localhost:3001

# File Upload
UPLOAD_DIR=./uploads

# Generation Limits
MAX_CONCURRENT_JOBS=3
MAX_QUIZZES_PER_REQUEST=20
AI_PARALLEL_LIMIT=10
AI_PLANNING_MAX_RETRIES=3

# Analytics access control:
# If set, AI analytics fields are only returned when query has
# ?analyticsSecret=<this value>
AI_ANALYTICS_SECRET=
